---
import type { SchemaProps } from "@/lib/types";
import type schema from "./schema";

type Props = SchemaProps<typeof schema>;
const { title, description, items } = Astro.props;
---

<div class="w-full bg-red-50">
  <h1 class="text-3xl font-bold">{title}</h1>
  <p>{description}</p>

  {
    items.map((i) => {
      return (
        <div class="bg-white p-4 my-4">
          <h2 class="text-xl font-bold">{i.itemName}</h2>
          <p>{i.itemQuantity}</p>
        </div>
      );
    })
  }
</div>

<script>
  console.log("Hello, World");
</script>
